<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorNeutralLight"
    android:tag="statusText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:minHeight="100dp"
        android:weightSum="100">

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="left|center_vertical"
            android:textColor="@color/colorNeutralDark" />

        <LinearLayout
            android:id="@+id/status_button_frame"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/status_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAlert"
        android:gravity="fill"
        android:minHeight="100dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorNeutralDark"
        android:visibility="gone">

    </TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorNeutralDark"/>
</LinearLayout>